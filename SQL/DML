CREATE TABLE Consulta (ID PRIMARY KEY NOT NULL AUTO INCREMENT UNIQUE,CODIGO_CONSULTA INT NOT NULL UNIQUE,DATA TIMESTAMP,SINTOMAS VARCHAR (255),
Paciente_ID INT FOREIGN KEY,Medico_ID INT FOREIGN KEY);

