CREATE DATABASE Hospital;USE Hospital;CREATE TABLE Medico ( ID INT PRIMARY KEY NOT NULL AUTO INCREMENT UNIQUE,NOME VARCHAR (50) NOT NULL,CPF VARCHAR (11) NOT NULL UNIQUE,DATANASCIMENTO DATE,Categoria_ID INT FOREIGN KEY,TELEFONE VARCHAR (10),ENDERECO VARCHAR(255));

INSERT INTO Medico (NOME, CPF, DATANASCIMENTO, Categoria_ID, TELEFONE, ENDERECO) VALUES ("Jose Martins", "51236748920","10-12-2020",1,"4652137895","Avenida Beira Mar");

CREATE TABLE Paciente (ID INT PRIMARY KEY NOT NULL AUTO INCREMENT UNIQUE,NOME VARCHAR (50) NOT NULL,CPF VARCHAR (11) NOT NULL UNIQUE,DATANASCIMENTO DATE,TELEFONE VARCHAR (10),ENDERECO VARCHAR(255),);

